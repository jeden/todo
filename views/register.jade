extends layout

block content
	.span3
	.well.span6
		form.form-horizontal(action='/doRegister', method='post')
			fieldset
				legend Create new account

				.control-group
					label.control-label(for='username') Username
					.controls
						input(name='username', type='text', placeholder='Choose your user name...')

				.control-group
					label.control-label(for='password') Password
					.controls
						input(name='password', type='password')

				.control-group
					label.control-label(for='confirmPassword') Confirm your password
					.controls
						input(name='confirmPassword', type='password')

				.control-group
					label.control-label(for='firstName') First Name
					.controls
						input(name='firstName', type='text', placeholder='Enter your first name...')

				.control-group
					label.control-label(for='lastName') Last Name
					.controls
						input(name='lastName', type='text', placeholder='Enter your last name...')

				.control-group
					.controls
						button.btn(type='submit') Create account
